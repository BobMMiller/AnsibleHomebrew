---
############################################################
# Pulls down the existing vlan database from a cisco switch
############################################################

- name: Connect to access switches
  hosts: switches
  gather_facts: false
  vars_files:
  - /home/bob/ansible/group_vars/switches.yml

  tasks:
  - name: show vlan
    ios_command:
      commands: 
        - "show vlan"
    register: ios_output